<!--pages/home/home.wxml-->
<scroll-view
  class="container1"
  scroll-x="false"
  scroll-y="false"
  upper-threshold="50"
  lower-threshold="50"
  scroll-top="0"
  scroll-left="0"
  scroll-into-view=""
  scroll-with-animation="false"
  enable-back-to-top="false"
  bindscrolltoupper=""
  bindscrolltolower=""
  bindscroll="scrollHandel"
>
  <view wx:for="{{ 10 }}" class="item1">{{ item }}</view>
</scroll-view>

<scroll-view class="container2" scroll-y>
  <view wx:for="{{ 10 }}" class="item2">
    {{ item }}
  </view>
</scroll-view>


